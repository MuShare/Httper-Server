<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="WEB-INF/config.properties"/>

    <bean id="mailComponent" class="org.fczm.httper.component.MailComponent">
        <property name="sender" value="${mail.sender}"/>
        <property name="smtp" value="${mail.smtp}"/>
        <property name="username" value="${mail.username}"/>
        <property name="password" value="${mail.password}"/>
    </bean>

    <bean id="configComponent" class="org.fczm.httper.component.ConfigComponent">
        <property name="httpProtocol" value="${config.httpProtocol}"/>
        <property name="domain" value="${config.domain}"/>
        <property name="validity" value="${config.validity}"/>
    </bean>

</beans>